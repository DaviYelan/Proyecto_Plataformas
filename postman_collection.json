{
  "info": {
    "name": "Proyecto_Plataformas API",
    "description": "Colección básica para probar los endpoints principales del backend Java.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"admin@demo.com\",\n  \"contrasenia\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Listar Buses",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/bus/lista",
          "host": ["{{base_url}}"],
          "path": ["api", "bus", "lista"]
        }
      }
    },
    {
      "name": "Listar Cooperativas",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/cooperativa/lista",
          "host": ["{{base_url}}"],
          "path": ["api", "cooperativa", "lista"]
        }
      }
    },
    {
      "name": "Listar Usuarios",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/persona/lista",
          "host": ["{{base_url}}"],
          "path": ["api", "persona", "lista"]
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080" },
    { "key": "token", "value": "" }
  ]
}
