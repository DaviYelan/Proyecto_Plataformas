# Crear .gitignore (añade o adapta según necesites)
@"
# Ignorados recomendados
backend/.env
backend/target/
*.class
*.jar
*.log
frontend/.idea/
*.iml
"@ | Out-File -FilePath .gitignore -Encoding UTF8

# Crear ejemplo sin secretos
@"
# Ejemplo de variables de entorno para backend (NO incluir secretos reales)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

USE_MONGO=true
MONGO_URI=mongodb://host.docker.internal:27017
MONGO_DB=BusesApp
"@ | Out-File -FilePath backend/.env.example -Encoding UTF8